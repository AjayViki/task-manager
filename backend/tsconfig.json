{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src"]
}
